@model _231103015_Ali_Yahya_Atasever.DAL.Video

@{
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Oluştur</title>
</head>
<body>

<h4>Videolar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Videolink" class="control-label"></label>
                <input asp-for="Videolink" class="form-control" />
                <span asp-validation-for="Videolink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Videotitle" class="control-label"></label>
                <input asp-for="Videotitle" class="form-control" />
                <span asp-validation-for="Videotitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SinifId" class="control-label"></label>
                <select asp-for="SinifId" class ="form-control" asp-items="ViewBag.SinifId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left me-1"></i> Geri Dön
        </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
</body>
</html>
